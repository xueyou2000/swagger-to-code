{
    "title": "JSON schema for rap2ts configuration files",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "swagger-urls": {
            "description": "swagger接口地址列表, 比如: https://petstore.swagger.io/v2/swagger.json",
            "type": "array",
            "default": [],
            "uniqueItems": true,
            "items": {
                "type": "string"
            }
        },
        "out": {
            "type": "string",
            "description": "接口输出目录",
            "default": "./src/api"
        },
        "fetch": {
            "type": "string",
            "description": "网络请求库地址",
            "default": "./src/api/fetch"
        }
    }
}